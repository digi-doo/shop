{% set manufacaturer = data %}

{% if manufacaturer.image is not empty %}
    {% set path = manufacaturer.image.path|imagine_filter(filter|default('sylius_admin_product_thumbnail')) %}
{% else %}
    {% set path = '//placehold.it/50x50' %}
{% endif %}

<a href="{{ path('app_admin_manufacturer_update', {'id': manufacaturer.id}) }}" title="{{ manufacaturer.name }}">
    <img src="{{ path }}" alt="" class="ui bordered image" />
</a>
