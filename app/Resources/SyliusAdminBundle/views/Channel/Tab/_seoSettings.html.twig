{% import '@SyliusUi/Macro/messages.html.twig' as message %}

<div class="ui tab" data-tab="seo_settings">
    <h3 class="ui dividing header">{{ 'sylius.ui.channel_seo_settings'|trans }}</h3>    
    {{ message.info('app.message.channel_seo_settings'|trans) }}
    <div class="column">
        {{ form_row(form.metaRobots) }}
        {{ form_row(form.metaTitle) }}
        {{ form_row(form.metaKeywords) }}
        {{ form_row(form.metaDescription) }}
        {{ form_row(form.metaAuthor) }}
    </div>
    {{ sonata_block_render_event('sylius.admin.channel.' ~ action ~ '.tab_seo_settings', {'form': form}) }}
</div>
