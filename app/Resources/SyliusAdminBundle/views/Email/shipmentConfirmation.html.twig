{% block subject %}
    {{ 'mailing.subject.shipment_confirmation'|trans }} {{ order.number }}
{% endblock %}

{% block body %}
    {% autoescape %}
    	{% include '@SyliusUi/Email/header.html.twig' with {'header': 'mailing.subject.shipment_confirmation'|trans } %}
    	{% include '@SyliusUi/Email/body-order.html.twig' with {
            'content_header': 'mailing.header.mail_dear_customer'|trans,
            'content': 'mailing.text.shipment_confirmation_text'|trans({'%id_order%': order.number, '%shipment_name%': shipment.method}),
            'order': order
        } %}
    	{% include '@SyliusUi/Email/footer.html.twig' with {'footer': 'mailing.footer.mail_footer'|trans } %}
    {% endautoescape %}
{% endblock %}
