{% set ancestors = taxon.ancestors|reverse %}

{# {% include '@SyliusShop/Taxon/_breadcrumb.html.twig' %} #}

{{ sonata_block_render_event('sylius.shop.taxon.header.before', {'taxon': taxon}) }}

<div class="filtr-header">
    <div class="row mt-4 pb-4">
        <div class="col offset-xl-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a href="{{ path('sylius_shop_homepage') }}">{{ 'sylius.ui.home'|trans }}</a>
                    </li>
                    {% for ancestor in ancestors %}
                        <li class="breadcrumb-item ">
                            <a href="{{ path('sylius_shop_product_index', {'slug': ancestor.slug, '_locale': ancestor.translation.locale}) }}">{{ ancestor.name|upper }}</a>
                        </li>
                    {% endfor %}
                    <li class="breadcrumb-item">{{ taxon.name|upper }}</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

{{ sonata_block_render_event('sylius.shop.taxon.header.after', {'taxon': taxon}) }}