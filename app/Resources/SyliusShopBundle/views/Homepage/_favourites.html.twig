{% if blocks|length > 0 %}
    {% set mainBlock = blocks|first %}
    {% set section = mainBlock.sections|first %}
    
    {% if mainBlock.products|length > 0 %}
        <div class="product-holder">
            <div class="row">
                <div class="col">
                    <h2 class="heading-border">{{ section.name }}</h2>
                </div>
            </div>
            <div class="row product">
                {% for product in mainBlock.products %}
                    <div class="col-lg-4 col-12">
                        {% include '@SyliusShop/Product/_box.html.twig' %}
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endif %}