<div class="margin-top">
	{{ form_row(form.notes, {'attr': {'rows': 3}}) }}
</div>

<div class="text-right">
    <div class="form-check">
        <input type="checkbox" 
            id="{{form.terms.vars.id}}" 
            name="{{form.terms.vars.full_name}}" 
            required="required" 
            class="form-check-input"
        >
        <label for="{{ form.terms.vars.id }}"
            class="form-check-label{{ form.terms.vars.required ? ' required' : '' }}">
            {{ 'sylius.form.checkout.terms'|trans({'%link%': url('bitbag_sylius_cms_plugin_shop_page_show', {'slug' : 'obchodni-podminky'})})|raw }}
        </label>
        {{ form_errors(form.terms) }}
    </div>
</div>