{% if app.user is not empty and app.user.customer is not empty and app.user.customer.addresses|length > 0 %}
    <div class="address-book-select">
        <select class="custom-select">
            <option selected>{{ 'sylius.ui.select_address_from_book'|trans }}</option>
            {% for address in app.user.customer.addresses %}
                <option data-id="{{ address.id }}"
                     data-title="{{ address.title }}"
                     data-first-name="{{ address.firstName }}"
                     data-last-name="{{ address.lastName }}"
                     data-company="{{ address.company }}"
                     data-street-number="{{ address.streetNumber }}"
                     data-street="{{ address.street }}"
                     data-city="{{ address.city }}"
                     data-postcode="{{ address.postcode }}"
                     data-phone-number="{{ address.phoneNumber }}"
                >
                    {{ address.title }} {{ address.firstName }} {{ address.lastName }}, {{ address.street }} {{ address.streetNumber }}, {{ address.city }} {{ address.postcode }}, {{ address.phoneNumber }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endif %}
