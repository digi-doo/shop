{% block subject %}
    {{ 'mailing.subject.user_registration'|trans }}
{% endblock %}

{% block body %}
    {% autoescape %}
    	{% include '@SyliusUi/Email/header.html.twig' with {'header': 'mailing.subject.user_registration'|trans } %}
        {% include '@SyliusUi/Email/body.html.twig' with {
    		'content_header': 'mailing.header.mail_dear_customer'|trans,
    		'content': 'mailing.text.user_registration_text'|trans({'%username%': user.username})
    	} %}
		{% include '@SyliusUi/Email/footer.html.twig' with {'footer': 'mailing.footer.mail_footer'|trans } %}
    {% endautoescape %}
{% endblock %}
